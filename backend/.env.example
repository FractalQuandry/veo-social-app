# ============================================
# MyWay Backend - Environment Configuration
# ============================================
# Copy this file to `.env` and fill in your values
# DO NOT commit the actual `.env` file to version control

# ============================================
# Development Mode (No GCP Required)
# ============================================
# Set to 'true' for testing without real API calls (no costs)
# Set to 'false' to use real Vertex AI generation
ENABLE_MOCKS=true

# Timeout for AI generation requests (milliseconds)
GENERATE_TIMEOUT_MS=800

# ============================================
# Feed Configuration
# ============================================
# Number of posts per feed page
FEED_SIZE=50

# Feed distribution (must sum to 1.0)
FEED_SHARE_INTEREST=0.60
FEED_SHARE_EXPLORE=0.25
FEED_SHARE_TRENDING=0.15

# Free tier limits
MAX_FREE_VIEWS=8
MAX_FREE_DEPTH=2

# ============================================
# GCP Configuration (Required for Production)
# ============================================
# Uncomment and configure these when ready to use real AI generation:

# Your GCP project ID (get from GCP Console)
# GCP_PROJECT_ID=your-project-id-here

# Vertex AI region (us-central1 recommended for Veo/Imagen)
# REGION_VERTEX=us-central1

# Firestore location (must match your Firestore region)
# LOCATION_FIRESTORE=us-central1

# Firebase Storage bucket (usually: your-project-id.appspot.com)
# FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Cloud Storage media folder prefix
# CLOUD_STORAGE_MEDIA_PREFIX=media

# ============================================
# Content Generation
# ============================================
# Comma-separated trending prompts for Explore feed
# TRENDING_PROMPTS=neon cyberpunk streets,cozy rainy cafe,surreal underwater city

# ============================================
# Optional: Pub/Sub (for async generation)
# ============================================
# Uncomment if using Pub/Sub worker pattern for background processing
# PUBSUB_TOPIC_GENERATE=myway-generate-content
# PUBSUB_SUBSCRIPTION_GENERATE=myway-generate-content-sub

# ============================================
# Optional: Cloud Run Configuration
# ============================================
# Uncomment if deploying to Cloud Run
# CLOUD_RUN_SERVICE=myway-backend

# Trending prompts for seeding mock content
TRENDING_PROMPTS=neon cyberpunk streets,cozy rainy cafe,surreal underwater city

# ====================
# GOOGLE CLOUD PLATFORM (Required when ENABLE_MOCKS=false)
# ====================
# Your GCP Project ID
# GCP_PROJECT_ID=your-project-id

# Vertex AI Region (e.g., us-central1)
# REGION_VERTEX=us-central1

# Firestore location (e.g., us-central)
# LOCATION_FIRESTORE=us-central

# Firebase Storage Bucket (without gs:// prefix)
# FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Cloud Storage media prefix
# CLOUD_STORAGE_MEDIA_PREFIX=media

# ====================
# PUB/SUB CONFIGURATION (Optional - for async processing)
# ====================
# If you want async generation via Pub/Sub instead of synchronous
# PUBSUB_TOPIC_GENERATE=projects/your-project-id/topics/generate-media
# PUBSUB_SUBSCRIPTION_GENERATE=projects/your-project-id/subscriptions/generate-media-sub
# CLOUD_RUN_SERVICE=myway-backend

# ====================
# AUTHENTICATION (Optional)
# ====================
# Path to your GCP service account JSON key file
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
