
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isBackend() {
      return request.auth != null && request.auth.token.admin == true;
    }

    match /users/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow create: if request.auth != null && request.auth.uid == uid;
      allow update: if request.auth != null && request.auth.uid == uid;
      allow list: if false;
    }

    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if true;  // Backend has service account permissions
    }

    match /feeds/{uid}/items/{doc} {
      allow read: if true;  // Backend needs to read all feeds
      allow write: if true;  // Backend has service account permissions
    }

    match /feed_jobs/{jobId} {
      allow read: if request.auth != null;
      allow write: if isBackend();
    }

    match /comments/{postId}/{cid} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.resource.data.authorUid == request.auth.uid;
    }

    match /likes/{postId}/{uid} {
      allow read: if true;
      allow create, delete: if request.auth != null && request.auth.uid == uid;
    }
  }
}
